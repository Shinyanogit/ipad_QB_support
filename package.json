{
  "name": "qb-support",
  "private": true,
  "scripts": {
    "build": "esbuild src/content.ts --bundle --outfile=extension/content.js --format=iife --target=es2020",
    "build:ext": "esbuild src/content.ts --bundle --outfile=extension/content.js --format=iife --target=es2020 && esbuild src/background.ts --bundle --outfile=extension/background.js --format=iife --target=es2020",
    "build:watch": "esbuild src/content.ts --bundle --outfile=extension/content.js --format=iife --target=es2020 --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.266",
    "esbuild": "^0.23.0",
    "typescript": "^5.5.4"
  }
}
